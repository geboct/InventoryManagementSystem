<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="forgotPasswordAnchorPane" prefHeight="447.0" prefWidth="401.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.ForgotPassword">
   <children>
      <Label alignment="CENTER" layoutY="-1.0" prefHeight="31.0" prefWidth="401.0" text="Forgot Password">
         <font>
            <Font name="Bookman Old Style" size="19.0" />
         </font>
         <effect>
            <Glow />
         </effect>
         <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="ARROW_LEFT" size="35" />
         </graphic>
      </Label>
      <Label layoutX="55.0" layoutY="56.0" prefHeight="56.0" prefWidth="292.0" text="Please enter your username and email to confirm" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font>
      </Label>
      <Separator layoutY="29.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <JFXTextField fx:id="usernameField" focusColor="#243035" labelFloat="true" layoutX="41.0" layoutY="150.0" onKeyPressed="#onEnterKey" prefHeight="30.0" prefWidth="311.0" promptText="username">
         <font>
            <Font size="14.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="emailField" focusColor="#243035" labelFloat="true" layoutX="40.0" layoutY="212.0" onKeyPressed="#onEnterKey" prefHeight="30.0" prefWidth="311.0" promptText="E-mail">
         <font>
            <Font size="14.0" />
         </font>
      </JFXTextField>
      <Button fx:id="recoverButton" layoutX="164.0" layoutY="368.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" stylesheets="@../css/base.css" text="Recover" />
      <JFXPasswordField fx:id="passwordField" focusColor="#243035" labelFloat="true" layoutX="40.0" layoutY="279.0" onKeyPressed="#onEnterKey" prefHeight="30.0" prefWidth="311.0" promptText="new password">
         <font>
            <Font size="14.0" />
         </font>
      </JFXPasswordField>
   </children>
</AnchorPane>
